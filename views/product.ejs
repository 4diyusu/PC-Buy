<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= product.title || 'Product Details' %></title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!--  Header (Dynamic based on login state) -->
    <%- include(isLoggedIn ? 'partials/loggedinHeader' : 'partials/header') %>

    <main class="product-details-layout">
      <div class="product-details-box">
        <img
          class="product-img"
          src="<%= product.image || '/assets/default.png' %>"
          alt="<%= product.title || 'Product Image' %>"
        />

        <div class="product-info">
          <h1><%= product.title || 'No Title Available' %></h1>
          <p><%= product.description || 'No description available.' %></p>
          <p>
            <strong>Price: </strong>
            â‚±<%= product.price ? product.price.toLocaleString() : 'N/A' %>
          </p>
          <p class="<%= product.instock ? 'in-stock' : 'out-of-stock' %>">
            <%= product.instock ? 'In Stock' : 'Out of Stock' %>
          </p>

          <div class="product-buttons">
            <% if (product.instock) { %>
            <form
              action="/cart/add/<%= product._id %>"
              method="POST"
              class="inline-form"
            >
              <button type="submit" class="add-to-cart-btn">Add to Cart</button>
            </form>
            <button class="buy-now-btn">Buy Now</button>
            <% } else { %>
            <button class="add-to-cart-btn" disabled>Out of Stock</button>
            <% } %>
          </div>
        </div>
      </div>

      <div class="product-specs">
        <h3>Product Specifications</h3>
        <p><%= product.fullSpecs || 'No specifications available.' %></p>
      </div>
    </main>

    <!--  Login Modal -->
    <%- include('partials/loginModal') %>

    <!--  Footer -->
    <%- include('partials/footer') %>

    <!-- Scripts -->
    <script src="/js/product.js"></script>
    <script src="/js/auth.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/login.js"></script>
  </body>
</html>
